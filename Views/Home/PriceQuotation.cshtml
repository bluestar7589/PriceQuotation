@model Quotation

@{
    ViewData["Title"] = "Price Quotation";
}

<h1>Price Quotation</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PriceQuotation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Subtotal" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Subtotal" class="form-control" />
                        <span asp-validation-for="Subtotal" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DiscountPercent" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="DiscountPercent" class="form-control" />
                        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DiscountAmount"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="DiscountAmount" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Total"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Total" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
                <a href="#" onclick="document.querySelector('form').reset(); return false;" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
